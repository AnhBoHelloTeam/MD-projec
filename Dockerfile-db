# Sử dụng Node.js 18 Alpine image (nhẹ và bảo mật)
FROM node:18-alpine

# Cài đặt SQLite
RUN apk add --no-cache sqlite

# Tạo thư mục app
WORKDIR /app

# Copy package.json
COPY package-db.json package.json

# Cài đặt dependencies
RUN npm install --only=production

# Copy source code
COPY . .

# Tạo thư mục cho database
RUN mkdir -p /app/data

# Tạo user non-root để chạy app (bảo mật)
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nodejs -u 1001

# Chuyển quyền sở hữu file cho user nodejs
RUN chown -R nodejs:nodejs /app
USER nodejs

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3000/health', (res) => { process.exit(res.statusCode === 200 ? 0 : 1) })"

# Start the application
CMD ["node", "server-db.js"]
